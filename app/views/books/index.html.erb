<h2>Books</h2>

<% if flash[:notice] %>
<p><font color="red"><%= flash[:notice] %></font></p>
<% end %>

<table >
	<tr align="left">
	  <th>Title</th>
	  <th>Body</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", "/books/#{book.id}" %></td>
		<td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
		<td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, 'data-confirm' => 'Are you sure?' %></td>
	</tr>
	<% end %>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>
